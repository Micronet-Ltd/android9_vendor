<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/trigger_title_reboot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/primary_color"
        android:gravity="bottom|left"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:text="@string/configure_reboot"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/trigger_message_reboot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/configure_reboot_message"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/carriers_container_view_reboot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:textColor="@color/primary_color" />

    <Button
        android:id="@+id/btn_no_reboot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/configure_cancel_button"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1" />
</LinearLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar" >
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:windowBackground">@color/u.bg.activity</item>
    </style>

    <!-- training style. -->
    <style name="VoiceWakeup"/>

    <style name="VoiceWakeup.Font" parent="VoiceWakeup">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text.default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="VoiceWakeup.Layout" parent="VoiceWakeup.Font" />

    <style name="VoiceWakeup.Layout.TopTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="VoiceWakeup.Font.Notice.Title" parent="@style/VoiceWakeup.Font">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VoiceWakeup.Layout.Section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="VoiceWakeup.Font.Notice.Content" parent="@style/VoiceWakeup.Font">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="VoiceWakeup.Font.KeyPhrase.Users" parent="@style/VoiceWakeup.Font">
        <item name="android:textColor">#666</item>
    </style>

    <style name="VoiceWakeup.Layout.Button.Blue" parent="VoiceWakeup.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/bg_detection_button_selector</item>
        <item name="android:textColor">@color/text.white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="VoiceWakeup.Font.Recording.Keyphrase" parent="@style/VoiceWakeup.Font">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#666</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="contact_select_popuwindow">
        <item name="android:windowEnterAnimation">@anim/contact_pop_show_anim</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="EmptyStateTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.54</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="dialog_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text.white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="dialog_content_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

</resources>
